<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/shadow_radius_border"
    android:elevation="5dp">

    <TextView
        android:id="@+id/textView99"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:minLines="1"
        android:text="Nhập địa chỉ giao hàng"
        android:gravity="left"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextDia_DiaChi"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Địa chỉ giao hàng"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView99"
        android:inputType="text"/>

    <Button
        android:id="@+id/btnOK_DiaChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ok"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textView99"
        app:layout_constraintTop_toBottomOf="@+id/editTextDia_DiaChi" />

    <Button
        android:id="@+id/btnCancelDia_DiaChi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView99"
        app:layout_constraintTop_toBottomOf="@+id/editTextDia_DiaChi" />
</androidx.constraintlayout.widget.ConstraintLayout>