<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePasswordFragment"
    android:fitsSystemWindows="true">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/txtThongTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="THAY ĐỔI MẬT KHẨU"
        android:textAlignment="center"
        android:textSize="32dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:id="@+id/layoutThongTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtThongTin"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/txtMKCu"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="14dp"
            android:text="Nhập mật khẩu cũ"
            android:textSize="28dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/editTextMK_Cu"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/custonname"
            android:ems="10"
            android:inputType="numberPassword"
            android:padding="14dp"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtMKMoi"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="14dp"
            android:text="Nhập mật khẩu mới"
            android:textSize="28dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/editTextMK_Moi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custonname"
            android:ems="10"
            android:inputType="numberPassword"
            android:padding="14dp"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtXacNhanMKMoi"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="14dp"
            android:text="Xác nhận mật khẩu mới"
            android:textSize="28dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/editTextXacNhan_MK_Moi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/custonname"
            android:ems="10"
            android:inputType="numberPassword"
            android:padding="14dp"
            android:textColorHint="@color/black"
            android:textSize="24dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnThayMatKhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutThongTin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:text="Thay mật khẩu"
        android:textSize="24dp" />

</RelativeLayout>