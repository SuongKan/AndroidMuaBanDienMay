<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadow_radius_border"
    android:elevation="8dp"
    android:layout_marginTop="5px"
    android:layout_marginLeft="5px"
    android:layout_marginRight="5px">

    <TextView
        android:id="@+id/NameCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="TextView"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/imgCartItem"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"/>

    <ImageView
        android:id="@+id/imgCartItem"
        android:layout_width="102dp"
        android:layout_height="141dp"
        android:src="@drawable/hinh_1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/priceCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:singleLine="true"
        android:text="TextView"
        android:textColor="@color/red_200"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/NameCartItem"
        app:layout_constraintTop_toBottomOf="@+id/NameCartItem" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ic_baseline_close_24"
        android:focusable="false"
        app:backgroundTint="#A0A0A0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnEdit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/ic_baseline_edit_24"
        android:focusable="false"
        app:backgroundTint="#A0A0A0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnDelete"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/soLuongCartItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Số lượng X"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/NameCartItem"
        app:layout_constraintTop_toBottomOf="@+id/priceCartItem" />
</androidx.constraintlayout.widget.ConstraintLayout>